@model IEnumerable<PMA_Projekt_Brodovi.Models.SvojstvaBroda>

@{
    ViewData["Title"] = "Index";
}

<h4>Specifikacije brodova</h4>
<hr/>


<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MarkaBroda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelBroda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Boja)
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="far fa-plus-square"></i> Novi</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MarkaBroda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelBroda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Boja)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.SvojstvaBrodaId"><i class="fa fa-marker fa-lg"></i></a>
                <a asp-action="Delete" asp-route-id="@item.SvojstvaBrodaId" class="text-danger ml-1" onclick="return confirm('Jeste li sigurni da želite izbrisati ovaj podatak?'"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
