@model IEnumerable<PMA_Projekt_Brodovi.Models.Brod>

@{
    ViewData["Title"] = "Index";
}

<h4>Popis brodova</h4>
<hr/>

<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImeBroda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistracijskeOznake)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SvojstvaBroda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vlasnik)
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="far fa-plus-square"></i> Novi</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImeBroda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistracijskeOznake)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SvojstvaBroda.SvojstvaBrodaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vlasnik.VlasnikId)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.BrodId"><i class="fa fa-marker fa-lg"></i></a> 
                <a asp-action="Delete" asp-route-id="@item.BrodId" class="text-danger ml-1" onclick="return confirm('Jeste li sigurni da želite izbrisati ovaj podatak?')"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
